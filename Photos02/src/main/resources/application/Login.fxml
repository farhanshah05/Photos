<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">
    <children>
        <Label layoutX="241.0" layoutY="80.0" prefHeight="50.0" prefWidth="200.0" style="-fx-font-size: 24.0; -fx-font-family: 'Arial'; -fx-text-fill: black;" text="Welcome!" textAlignment="CENTER" />
        <Label layoutX="150.0" layoutY="140.0" style="-fx-font-family: 'Arial'; -fx-font-size: 14.0;" text="Username:" />
        <TextField fx:id="tfUsername" layoutX="150.0" layoutY="170.0" onKeyPressed="#handleEnterKey" prefHeight="40.0" prefWidth="300.0" promptText="Username" style="-fx-font-family: 'Arial'; -fx-font-size: 14.0;" />
        <!--        <TextField fx:id="tfUsername" onKeyPressed="#handleEnterKey"/>-->
        <Button fx:id="mLogIn" layoutX="250.0" layoutY="230.0" mnemonicParsing="false" onAction="#login" prefHeight="40.0" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Log In" />
    </children>
</AnchorPane>
